{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "build/",
    "rootDir": "src/",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "types": ["express"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "CommonJS",
  }
}